<Window x:Class="matchymatchy.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:matchymatchy"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/214615.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button Content="PLAY" HorizontalAlignment="Left" Margin="10,309,0,0" VerticalAlignment="Top" Height="60" Width="164" Click="LoadGame" FontSize="36" FontFamily="Arial Black"/>
        <Button Content="EXIT" HorizontalAlignment="Left" Margin="208,309,0,0" VerticalAlignment="Top" Height="60" Width="164" Click="ExitGame" FontSize="36" FontFamily="Arial Black">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>


    </Grid>
</Window>
